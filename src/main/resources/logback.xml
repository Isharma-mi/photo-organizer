<configuration>
	<property name = "LOG_FILE_NAME" value = "logFileName"/>
	<appender name = "ROLLING_FILE" class = "ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FILE_NAME}.log</file>
		<append>true</append>
		
		<!-- Format of messages in the log -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
		</encoder>
		
		<!-- Rolling policy -->
		<rollingPolicy class = "ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_FILE_NAME}.%d{yyyy-MM-dd-HH}.%i.log</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>1</maxHistory>
		</rollingPolicy>
	</appender>
	

	<!-- Used to configure for logger levels of at least info and above at a root level -->
	<root level = "info">
		<appender-ref ref = "ROLLING_FILE"/>
	</root>
</configuration>